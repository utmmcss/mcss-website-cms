    "Start": {
      "type": "datetime",
      "required": true
    },
    "End": {
      "type": "datetime",
      "required": true
    },
    "Location": {
      "type": "string",
      "required": true
    },
    "Content": {
      "type": "richtext"
    },
    "Description": {
      "type": "text"
    },
    "Tags": {
      "type": "component",
      "repeatable": true,
      "component": "socials.tags"
    }
  }
